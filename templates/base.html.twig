    <body>
    <!-- Début Header : barre de navigation et logo-->
        <header>
            <nav id="menu" class="side-spaced">
                <div class="f-3">
                    <p class="police_logo"><strong>SimRacing France</strong></p>
                </div>
                <div id="menu-links">
                    <a class="nav_link mr" href="{{ path('app_home')}}">Accueil</a>
                    <a class="nav_link mr" href="}">Menu</a>
                    <a class="nav_link mr" href="">Contact</a>
                    {% if is_granted('ROLE_ADMIN') %} 
                    <a class="nav_link mr" href="">Admin</a>
                    {% endif %}
                </div>
                <div id="burger">
                    <i class="fas fa-bars"></i>
                </div>
            </nav>
        </header>

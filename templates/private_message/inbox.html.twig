{% extends 'base.html.twig' %}
 {% block stylesheets %}
 <link rel="stylesheet" href="{{ '../css/search.css' }}">
 {% endblock %}
{% block title %}Team{% endblock %}

{% block body %}
<main class="wrapper">

<section class="search_page">
        <h1 class="mb-5">Boite de reception</h1>
        <a class="nav_link mr" href="{{ path('app_private_message')}}">Retour</a>

    <div>
        {{ render ( controller ( 'App\\Controller\\ForumController::searchBar' )) }}
    </div>

    <div>
        <ul>
            {% if mp is defined and mp is not null %}
                {% for message in mp %}
                    <li><a class="nav_link mr" href="{{ path('app_private_message_inbox_page', { 'id': message.id } )}}">{{ message.objet }}
                    </a><br>
                    {{ message.expediteur.nom }}</li>
                {% endfor %}
            {% elseif mp is not defined or mp is null %}
            <h2> Vous n'avez pas de message priv√© </h2>
            {% endif %}
        </ul>
    </div>
</section>
</main>
{% endblock %}
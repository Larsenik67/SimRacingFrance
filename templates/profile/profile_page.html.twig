{% extends 'base.html.twig' %}
 {% block stylesheets %}
 <link rel="stylesheet" href="{{ '/css/search.css' }}">
 {% endblock %}
{% block title %}Team{% endblock %}

{% block body %}
<main class="wrapper">
    <section class="search_page">
        <div>
            <h1>{{ user.nom }}</h1>
            {% if user.team != null %}
            <h3>{{ user.team.nom }}</h3>
            <p>{{ user.roleTeam[0] }}</p>
            {% endif %}
            {% if user.sujets is not defined %}
            <div>
                <h3>Liste des sujets</h3>
                <ul>
                {% for sujet in user.sujets %}
                <li class="mb-5">{{ sujet.titre }}</li>
                {% endfor %}
                </ul>
            </div>
            {% endif %}
            {% if user.evenement is not defined %}
            <div>
                <h3>Liste des events</h3>
                <ul>
                {% for event in user.evenement %}
                <li class="mb-5">{{ event.nom }}</li>
                {% endfor %}
                </ul>
            </div>
            {% endif %}
        </div>
    </section>
</main>
{% endblock %}
{% extends 'base.html.twig' %}
 {% block stylesheets %}
 <link rel="stylesheet" href="{{ '/css/search.css' }}">
 {% endblock %}
{% block title %}Team{% endblock %}

{% block body %}
<main class="wrapper">
<section class="search_page">
{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <a class="nav_link mr" href="{{ path('app_forum_response', { 'id': sujet.id } )}}">RÃ©pondre</a>
        {% if sujet.user == app.user or sujet.team == app.user.team and app.user.roleTeam[0] == "ROLE_ADMIN" or sujet.team == app.user.team and app.user.roleTeam[0] == "ROLE_MODO"%}
        <a class="nav_link mr" href="{{ path('app_forum_edit', { 'id': sujet.id } )}}">Editer</a>

{% extends 'base.html.twig' %}
 {% block stylesheets %}
 <link rel="stylesheet" href="{{ '/css/search.css' }}">
 {% endblock %}
{% block title %}Team{% endblock %}

{% block body %}
<main class="wrapper">
<section class="search_page">
            <div>
            <h1>{{ team.nom }}</h1>
                <h2>{{ team.description }}</h2>
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    {% if app.user.team == team %}
                        {% if app.user.isVerifiedTeam == "0" %}
                            <a class="nav_link mr" href="{{ path('app_team_leave')}}">Annuler la candidature</a>
                        {% elseif  app.user.isVerifiedTeam == "1" %}
                            {% if app.user.roleteam != ["ROLE_ADMIN", "ROLE_FONDATEUR"]%}
                            <a class="nav_link mr" href="{{ path('app_team_leave')}}">Quitter la team</a>
                            {% endif %}
                        {% endif %}
                    {% endif %}
                    {% if app.user.team == null %}
                        <a class="nav_link mr" href="{{ path('app_team_join', { 'id': team.id } )}}">Rejoindre la team</a>
                    {% endif %}
                {% endif %}
                <div>
                <h3>Liste des pilotes ({{ count }} membre(s))</h3>
                <ul>
                    {% for user in users %}
                        <li class="mb-5">{{ user.nom }}</li>
                    {% endfor %}
                </ul>
                </div>
                <div>
                 <h3>Liste des events</h3>
                <ul>
                    {% for event in team.evenements %}
                        <li class="mb-5">{{ event.nom }}</li>
                    {% endfor %}
                </ul>
                </div>
            </div>
</section>
</main>
{% endblock %}
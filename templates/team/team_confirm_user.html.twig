{% extends 'base.html.twig' %}
 {% block stylesheets %}
 <link rel="stylesheet" href="{{ 'css/search.css' }}">
 {% endblock %}
{% block title %}Team{% endblock %}

{% block body %}
<main class="wrapper">
<section class="search_page">
<a class="nav_link mr" href="{{ path('app_team')}}">Retour</a>
<h1>Liste des pilotes en attente chez {{ app.user.team.nom }}</h1>
<ul>
{% for user in users %}
<li class="mb-5">{{ user.nom }} - <a class="nav_link mr" href="{{ path('app_team_confirmation_id', { 'id': user.id } )}}">Accepter</a></li>
{% endfor %}
</ul>
</section>
</main>
{% endblock %}